{
  "openapi": "3.0.1",
  "info": {
    "title": "Payments API",
    "version": "1.0"
  },
  "paths": {
    "/api/payments": {
      "get": {
        "operationId": "GetPayments",
        "summary": "Get all payments",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Payment" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Payment": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "format": "uuid" },
          "amount": { "type": "number" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "Opaque"
      }
    }
  },
  "security": [
    { "bearerAuth": [] }
  ]
}
