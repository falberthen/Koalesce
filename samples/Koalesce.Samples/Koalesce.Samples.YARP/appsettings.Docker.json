{
  "Koalesce": {
    "OpenApiVersion": "3.0.1",
    "Info": {
      "Title": "[Docker] My üê®Koalesced API with YARP Gateway",
      "Description": "Unified API aggregating multiple services"
    },
    "Sources": [
      {
        "Url": "http://customers-api:8080/swagger/v1/swagger.json",
        "PrefixTagsWith": "Customers"
      },
      {
        "Url": "http://products-api:8080/swagger/v1/swagger.json",
        "PrefixTagsWith": "Products",
        "ExcludePaths": [ "*/admin/*" ]
      },
      {
        "Url": "http://inventory-api:8080/swagger/v1/swagger.json",
        "VirtualPrefix": "/inventory",
        "PrefixTagsWith": "Inventory"
      }
    ],
    "ApiGatewayBaseUrl": "http://localhost:5000",
    "Cache": {
      "AbsoluteExpirationSeconds": 86400,
      "SlidingExpirationSeconds": 60
    },
    "MergedEndpoint": "/swagger/v1/apigateway.yaml"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
