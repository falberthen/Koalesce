{
  "Koalesce": {
    "OpenApiVersion": "3.0.1",
    "Info": {
      "Title": "[Docker] My üê®Koalesced API with Ocelot Gateway",
      "Description": "Unified API aggregating multiple services"
    },
    "Sources": [
      {
        "Url": "http://customers-api:8080/swagger/v1/swagger.json"
      },
      {
        "Url": "http://products-api:8080/swagger/v1/swagger.json",
        "PrefixTagsWith": "Catalog", // products API exposes a /products endpoint
        "ExcludePaths": [ "*/admin/*" ]
      },
      {
        "Url": "http://inventory-api:8080/swagger/v1/swagger.json", // inventory also exposes a /products endpoint
        "VirtualPrefix": "/inventory",
        "PrefixTagsWith": "Inventory" // prefix tag will help avoid conflicts and group endpoints in the UI
      }
    ],
    "ApiGatewayBaseUrl": "http://localhost:5000",
    "Cache": {
      "AbsoluteExpirationSeconds": 86400,
      "SlidingExpirationSeconds": 60
    },
    "MergedEndpoint": "/swagger/v1/apigateway.yaml",
    "MergeReportEndpoint": "/koalesce/report.html" // switch to .json for a machine-readable report
  }
}
