{
  "Koalesce": {
    "OpenApiVersion": "3.0.1",
    "Title": "My Koalesced API with Ocelot Gateway",
    "OpenApiSources": [
      {
        "Url": "https://localhost:8001/swagger/v1/swagger.json"
      },
      {
        "Url": "https://localhost:8002/swagger/v1/swagger.json"
      },
      {
        "Url": "https://localhost:8003/swagger/v1/swagger.json", // Inventory API has identical paths to Products API
        "VirtualPrefix": "/inventory" // Prefix all its paths with /inventory to avoid conflicts
      }
    ],
    "MergedOpenApiPath": "/swagger/v1/apigateway.yaml",
    "ApiGatewayBaseUrl": "https://localhost:5000",
    "Cache": {
      "DisableCache": false,
      "AbsoluteExpirationSeconds": 86400, // 24 hours
      "SlidingExpirationSeconds": 60, // 1 minute
      "MinExpirationSeconds": 30 // Minimum cache duration
    }
  }
}