{
  // Change the SecurityMode if you want to test Auth scheme options 
  // "None" to disable security (not recommended for production)
  // "JWT" for JWT Bearer in header
  // "ApiKey" for ApiKey in header
  // "Basic" for Basic Authentication
  // "OAuth2ClientCredentials" for OAuth2 Client Credentials flow
  // "OAuth2AuthCode" for OAuth2 Authorization Code flow
  // "OpenIdConnect" for OpenID Connect
  "KoalesceSample": {
    "SecurityMode": "JWT"
  },
  "Koalesce": {
    "OpenApiVersion": "3.0.1",
    "Title": "My Koalesced API with Ocelot Gateway",
    "Sources": [
      {
        "Url": "https://localhost:8001/swagger/v1/swagger.json"
      },
      {
        "Url": "https://localhost:8002/swagger/v1/swagger.json"
      },
      {
        "Url": "https://localhost:8003/swagger/v1/swagger.json", // Inventory API has identical paths to Products API
        "VirtualPrefix": "/inventory" // Added prefixes to avoid conflicts since SkipIdenticalPaths is false (default)
      }
    ],
    "SkipIdenticalPaths": false, // False by default. Set to true to skip identical paths instead of defining prefixes for merging
    "ApiGatewayBaseUrl": "https://localhost:5000",
    "Cache": {
      "DisableCache": false,
      "AbsoluteExpirationSeconds": 86400, // 24 hours
      "SlidingExpirationSeconds": 60, // 1 minute
      "MinExpirationSeconds": 30 // Minimum cache duration
    },
    "MergedDocumentPath": "/swagger/v1/apigateway.yaml"
  }
}